<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <EditText
        android:id="@+id/a_add_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/a_add_contact_txt_name"
        android:inputType="text" />

    <EditText
        android:id="@+id/a_add_contact_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/a_add_contact_txt_mail"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/a_add_contact_add_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/btn_nav"
        android:text="@string/a_add_contact_btn_add_image"
        android:textColor="@color/white" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textfield_margin"
        android:orientation="horizontal">

        <Button style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/a_add_contact_add"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="24dp"
            android:layout_weight="50"
            android:background="@drawable/btn_nav"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/a_add_contact_btn_add"
            android:textColor="@color/white" />

        <Button style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/a_add_contact_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_weight="50"
            android:background="@drawable/btn_nav"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/a_add_contact_btn_cancel"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>