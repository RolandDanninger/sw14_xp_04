<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RegistrationActivity" >

    <TextView
        android:id="@+id/a_registration_lbl_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/a_registration_lbl_registration"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/logo_height" >

        <ImageView
            android:id="@+id/a_registration_img_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banner_sam" />
    </FrameLayout>

    <TextView
        android:id="@+id/a_registration_lbl_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textfield_margin"
        android:textColor="@color/error_text_fg"
        android:visibility="gone" />

    <EditText
        android:id="@+id/a_registration_txt_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textfield_margin"
        android:ems="10"
        android:hint="@string/a_registration_txt_email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/a_registration_txt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textfield_margin"
        android:ems="10"
        android:hint="@string/a_registration_txt_password"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/a_registration_txt_reenter_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textfield_margin"
        android:ems="10"
        android:hint="@string/a_registration_txt_reenter_password"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/a_registration_btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textfield_margin"
        android:text="@string/a_registration_btn_register" />

</LinearLayout>