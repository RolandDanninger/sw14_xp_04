<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <TextView
        android:id="@+id/a_login_lbl_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_login_lbl_welcome"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/logo_height" >

        <ImageView
            android:id="@+id/a_login_img_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banner_sam" />
    </FrameLayout>

    <EditText
        android:id="@+id/a_login_txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/a_login_txt_email"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/a_login_txt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/a_login_txt_password"
        android:inputType="textPassword" >
        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textfield_margin"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/a_login_btn_login"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/a_login_btn_login" 
                        android:textColor="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp" 
                        android:background="@drawable/btn_nav"/>

        <Button
            android:id="@+id/a_login_btn_register"
            style="@android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_weight="50"
            android:background="@drawable/btn_nav"
            android:text="@string/a_login_btn_register"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>